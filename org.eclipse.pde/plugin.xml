<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.ui.intro.configExtension">
      <configExtension
            configId="org.eclipse.platform.introConfig" 
            content="$nl$/intro/overviewExtensionContent.xml"/>  
      <configExtension
            configId="org.eclipse.platform.introConfig"
            content="$nl$/intro/tutorialsExtensionContent.xml"/>
      <configExtension
            configId="org.eclipse.platform.introConfig"
            content="$nl$/intro/samplesExtensionContent.xml"/>
      <configExtension
            configId="org.eclipse.platform.introConfig"
            content="$nl$/intro/newsExtensionContent.xml"/> 
      <configExtension
            configId="org.eclipse.platform.introConfig"
            content="$nl$/intro/newsExtensionContent2.xml"/>     
   </extension>
   
   <extension
         point="org.eclipse.ui.intro.configExtension">
      <configExtension
            configId="org.eclipse.ui.intro.universalConfig" 
            content="$nl$/new-intro/overviewExtensionContent.xml"/>  
      <configExtension
            configId="org.eclipse.ui.intro.universalConfig"
            content="$nl$/new-intro/tutorialsExtensionContent.xml"/>
      <configExtension
            configId="org.eclipse.ui.intro.universalConfig"
            content="$nl$/new-intro/samplesExtensionContent.xml"/>
      <configExtension
            configId="org.eclipse.ui.intro.universalConfig"
            content="$nl$/new-intro/samplesExtensionContent2.xml"/>
      <configExtension
            configId="org.eclipse.ui.intro.universalConfig"
            content="$nl$/new-intro/newsExtensionContent.xml"/> 
      <configExtension
            configId="org.eclipse.ui.intro.universalConfig"
            content="$nl$/new-intro/newsExtensionContent2.xml"/>     
   </extension>

   <extension 
   		 point="org.eclipse.ui.cheatsheets.cheatSheetContent">
      <cheatsheet
            category="org.eclipse.pde"
            contentFile="$nl$/cheatsheets/helloworld.xml"
            id="org.eclipse.pde.helloworld"
            name="%cheatsheet.helloworld.name">
         <description>%cheatsheet.helloworld.desc</description>
      </cheatsheet>
      <cheatsheet
            category="org.eclipse.pde"
            contentFile="$nl$/cheatsheets/updates.xml"
            id="org.eclipse.pde.updates"
            name="%cheatsheet.updates.name">
         <description>%cheatsheet.updates.desc</description>
      </cheatsheet>
      <cheatsheet
            category="org.eclipse.pde"
            contentFile="$nl$/cheatsheets/rcpapp.xml"
            id="org.eclipse.pde.rcpapp"
            name="%cheatsheet.rcpApp.name">
         <description>%cheatsheet.rcpApp.desc</description>
      </cheatsheet>
      <category
            id="org.eclipse.pde"
            name="%cheatsheet.category.pde"/>
   </extension>
   
</plugin>
