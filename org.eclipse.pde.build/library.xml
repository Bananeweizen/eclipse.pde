<?xml version="1.0" encoding="UTF-8"?>
<project name="build library" default="empty">

  <target name="empty"/>

  <target name="jar">
    <property name="destdir" value="${jarName}.bin"/>
    <delete dir="${destdir}"/>
    <mkdir dir="${destdir}"/>
    <!-- compiles the source code -->
    <javac srcdir="${srcdir}" destdir="${destdir}" verbose="no" failonerror="no">
      <classpath path="${classpath}"/>
    </javac>
    <!-- copies the necessary resources -->
    <copy todir="${destdir}">
      <fileset dir="${srcdir}" includes="" excludes="**/*.java"/>
    </copy>
    <delete file="${jarName}"/>
    <jar jarfile="${jarName}" basedir="${destdir}"/>
    <copy todir="${basedir}">
      <fileset dir="." includes="*.log" />
    </copy>
    <delete dir="${jarName}"/>
    <jar jarfile="${jarName}" basedir="${destdir}"/>
    <delete dir="${destdir}"/>
  </target>

</project>