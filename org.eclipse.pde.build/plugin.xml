<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="org.eclipse.pde.core"
   name="%pluginName"
   version="0.9.0"
   provider-name="Object Technology International, Inc.">

<requires>
   <import plugin="org.eclipse.ant.core"/>
   <import plugin="org.eclipse.jdt.core"/>
   <import plugin="org.apache.xerces"/>
</requires>

<runtime>
   <library name="pdecore.jar">
      <export name="*"/>
   </library>
</runtime>

<extension point="org.eclipse.ant.core.antObjects">
   <antObject
         name="org.eclipse.pde.internal.core.JDTCompilerAdapter"
         class="org.eclipse.pde.internal.core.JDTCompilerAdapter">
   </antObject>
</extension>
<extension point="org.eclipse.ant.core.antTasks">
   <antTask
         name="initTemplate"
         class="org.eclipse.pde.internal.core.InitTemplate">
   </antTask>
</extension>
<extension point="org.eclipse.ant.core.antTasks">
   <antTask
         name="buildscript"
         class="org.eclipse.pde.internal.core.ScriptBuilder">
   </antTask>
</extension>

<extension point="org.eclipse.ant.core.antTypes">
   <antType
         name="stripMapper"
         class="org.eclipse.pde.internal.core.StripMapper">
   </antType>
</extension>

<extension id="plugin" point="org.eclipse.core.runtime.applications">
   <application>
      <run class="org.eclipse.pde.internal.core.PluginBuildScriptGenerator"/>
   </application>
</extension>
<extension id="fragment" point="org.eclipse.core.runtime.applications">
   <application>
      <run class="org.eclipse.pde.internal.core.FragmentBuildScriptGenerator"/>
   </application>
</extension>
<extension id="component" point="org.eclipse.core.runtime.applications">
   <application>
      <run class="org.eclipse.pde.internal.core.ComponentBuildScriptGenerator"/>
   </application>
</extension>
<extension id="configuration" point="org.eclipse.core.runtime.applications">
   <application>
      <run class="org.eclipse.pde.internal.core.ConfigurationBuildScriptGenerator"/>
   </application>
</extension>
<extension id="fetch" point="org.eclipse.core.runtime.applications">
   <application>
      <run class="org.eclipse.pde.internal.core.Fetch"/>
   </application>
</extension>

</plugin>
