<?xml version="1.0" encoding="UTF-8"?>
<plugin
  name="Eclipse PDE Core"
  id="org.eclipse.pde.core"
  version="1.0"
  vendor-name="IBM">

  <runtime>
    <library name="pdecore.jar">
      <export name="*"/>
    </library>
  </runtime>

  <requires>
    <import plugin="org.eclipse.ant.core"/>
    <import plugin="org.eclipse.jdt.core"/>
  </requires>

  <extension point="org.eclipse.ant.core.antObjects">
    <antObject name="org.eclipse.pde.internal.core.JDTCompilerAdapter" class="org.eclipse.pde.internal.core.JDTCompilerAdapter"/>
  </extension>

  <extension point="org.eclipse.ant.core.antTasks">
    <antTask name="initTemplate" class="org.eclipse.pde.internal.core.InitTemplate"/>
  </extension>

</plugin>
