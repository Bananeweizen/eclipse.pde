<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="org.eclipse.pde.core"
   name="%pluginName"
   version="2.1.2"
   provider-name="Object Technology International, Inc.">

<requires>
   <import plugin="org.eclipse.ant.core"/>
   <import plugin="org.eclipse.jdt.core"/>
   <import plugin="org.eclipse.update.core"/>
</requires>

<runtime>
   <library name="pdecore.jar">
      <export name="*"/>
   </library>
</runtime>

<!-- Applications -->

<extension id="buildScript" point="org.eclipse.core.runtime.applications">
   <application>
      <run class="org.eclipse.pde.internal.core.BuildScriptGeneratorApplication"/>
   </application>
</extension>
<extension id="fetchScript" point="org.eclipse.core.runtime.applications">
   <application>
      <run class="org.eclipse.pde.internal.core.FetchScriptGeneratorApplication"/>
   </application>
</extension>


<!-- Objects -->
<extension point="org.eclipse.ant.core.antObjects">
   <antObject
      name="org.eclipse.pde.internal.core.JDTCompilerAdapter"
      class="org.eclipse.pde.internal.core.JDTCompilerAdapter"
      library="lib/pdecore-ant.jar">
   </antObject>
</extension>


<!-- Tasks -->

<extension point="org.eclipse.ant.core.antTasks">
   <antTask
      name="initTemplate"
      class="org.eclipse.pde.internal.core.tasks.InitTemplate"
      library="lib/pdecore-ant.jar">
   </antTask>
   <antTask
      name="fetch"
      class="org.eclipse.pde.internal.core.tasks.FetchTask"
      library="lib/pdecore-ant.jar">
   </antTask>
   <antTask
      name="buildscript"
      class="org.eclipse.pde.internal.core.tasks.BuildScriptGeneratorTask"
      library="lib/pdecore-ant.jar">
   </antTask>
   <antTask
      name="buildManifest"
      class="org.eclipse.pde.internal.core.tasks.BuildManifestTask"
      library="lib/pdecore-ant.jar">
   </antTask>
   <antTask
      name="pluginLocation"
      class="org.eclipse.pde.internal.core.tasks.PluginLocationTask"
      library="lib/pdecore-ant.jar">
   </antTask>
</extension>


<!-- Types -->

<extension point="org.eclipse.ant.core.antTypes">
   <antType
      name="stripMapper"
      class="org.eclipse.pde.internal.core.types.StripMapper"
      library="lib/pdecore-ant.jar">
   </antType>
</extension>

</plugin>